{
  "scripts": {
    "dev": "redrun --parallel dev:packs dev:assets dev:snowpack",
    "dev:packs": "sirv ../packs/build --cors --dev --port 8081 --quiet",
    "dev:assets": "sirv ../assets --cors --dev --port 8082 --quiet",
    "dev:snowpack": "snowpack dev",
    "build": "snowpack build",
    "format": "prettier --write --plugin-search-dir=. './**/*.js' './**/*.mjs' './**/*.svelte' './**/*.json'",
    "format:check": "prettier --check --plugin-search-dir=. './**/*.js' './**/*.mjs' './**/*.svelte' './**/*.json'",
    "prepare": "husky install .husky",
    "test": "web-test-runner \"src/**/*.test.js\""
  },
  "devDependencies": {
    "@minetower/ui-components": "git+https://github.com/minetower/ui-components.git",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-svelte": "^3.3.0",
    "@tailwindcss/forms": "^0.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "autoprefixer": "^10.0.4",
    "chai": "^4.2.0",
    "http2-proxy": "^5.0.53",
    "husky": "^5.0.9",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "postcss": "^8.1.10",
    "postcss-load-config": "^3.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.4",
    "redrun": "^9.0.1",
    "sirv-cli": "^2.0.2",
    "snowpack": "^3.0.11",
    "svelte": "^3.46.2",
    "svelte-preprocess": "^4.1.1",
    "svelte-storages": "^0.0.2",
    "tailwindcss": "^3.0.15"
  },
  "dependencies": {
    "@zip.js/zip.js": "^2.4.1"
  }
}
